@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="myCtrl">
    <div class="divList">
        <p><b><i>Inventory List</i></b></p>
        <table class="table table-hover">
            <tr>
                <td><b>ID</b></td>
                <td><b>Name</b></td>
                <td><b>Description</b></td>
                <td><b>UnitPrice</b></td>
                <td><b>No_Of_Unit</b></td>
            </tr>
            <tr ng-repeat="inventory in inventory">
                <td>
                    {{inventory.Id}}
                </td>
                <td>
                    {{inventory.Name}}
                </td>
                <td>
                    {{inventory.Description}}
                </td>
                <td>
                    {{inventory.UnitPrice}}
                </td>
                <td>
                    {{inventory.No_Of_Unit}}
                </td>
                <td>
                    <span ng-click="editInventory(inventory)" class="btn btn-primary">Edit</span>
                    <span ng-click="deleteInventory(inventory)" class="btn btn-danger">Delete</span>
                </td>
            </tr>
        </table>
    </div>
    <span ng-click="AddInventoryDiv()" class="btn btn-default">
        Add Inventory
    </span>
    <div ng-show="divInventory">
        <p class="divHead"></p>
        <table class="table">
            <tr>
                <td><b><i>{{Action}} Inventory</i></b></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
            <tr>
                <td><b>Id</b></td>
                <td>
                    <input type="text" disabled="disabled" ng-model="inventoryId" />
                </td>
                <td><b>Name</b></td>
                <td>
                    <input type="text" ng-model="inventoryName" />
                </td>
            </tr>
            <tr>
                <td><b>Description</b></td>
                <td>
                    <input type="text" ng-model="inventoryDescription" />
                </td>
                <td><b>UnitPrice</b></td>
                <td>
                    <input type="text" ng-model="inventoryUnitPrice" />
                </td>
            </tr>
            <tr>
                <td><b>No_Of_Unit</b></td>
                <td>
                    <input type="text" ng-model="inventoryNo_Of_Unit" />
                </td>
                <td></td>
                <td>
                    <input type="button" class="btn btn-default" value="Save" ng-click="AddUpdateInventory()" />
                    <input type="button" class="btn btn-danger" value="Cancel" ng-click="Cancel()" />
                </td>
            </tr>
        </table>
    </div>
 </div>
